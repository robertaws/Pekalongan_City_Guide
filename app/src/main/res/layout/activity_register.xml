<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_batik"
        android:backgroundTint="@color/palette_4"
        android:backgroundTintMode="screen"
        tools:context=".Layout.Register">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backtoLogin"
                android:background="#0000"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_icon"/>

            <ImageView
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo" />
        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regisuser_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperTextTextColor="#C83838"
            app:helperText=""
            app:helperTextTextAppearance="@style/CustomHelperText"
            android:textColorHint="@color/palette_2"
            app:errorEnabled="true"
            app:boxBackgroundMode="none">
            <EditText
                android:drawableTint="@color/palette_1"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/user_icon"
                android:id="@+id/regis_user"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/et_style"
                android:hint="@string/regisuser_text"
                android:textSize="18dp"
                android:textColor="@color/palette_1"
                android:inputType="textPersonName"
                android:padding="7dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regisemail_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/palette_2"
            app:errorEnabled="true"
            app:helperTextTextColor="#C83838"
            app:helperText=""
            app:helperTextTextAppearance="@style/CustomHelperText"
            app:boxBackgroundMode="none">
            <EditText
                android:drawableTint="@color/palette_1"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/mail_icon"
                android:id="@+id/regis_email"
                android:fontFamily="@font/poppins_regular"
                android:padding="7dp"
                android:textSize="18dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/regisemail_text"
                android:textColor="@color/palette_1"
                android:inputType="textEmailAddress"
                android:background="@drawable/et_style" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regispass_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/palette_2"
            app:helperTextTextColor="#C83838"
            app:helperText=""
            app:helperTextTextAppearance="@style/CustomHelperText"
            app:boxBackgroundMode="none"
            app:passwordToggleTint="@color/palette_1"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <EditText
                android:drawableTint="@color/palette_1"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/pass_icon"
                android:id="@+id/regis_pass"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/regispass_text"
                android:textSize="18dp"
                android:textColor="@color/palette_1"
                android:padding="7dp"
                android:inputType="textPassword"
                android:background="@drawable/et_style" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/regiscpass_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/palette_2"
            app:helperTextTextColor="#C83838"
            app:helperText=""
            app:helperTextTextAppearance="@style/CustomHelperText"
            app:boxBackgroundMode="none"
            app:passwordToggleTint="@color/palette_1"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <EditText
                android:drawableTint="@color/palette_1"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/pass_icon"
                android:id="@+id/regis_cpass"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/regiscfmpass_text"
                android:textColor="@color/palette_1"
                android:padding="7dp"
                android:textSize="18dp"
                android:inputType="textPassword"
                android:background="@drawable/et_style" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/regis_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/et_style"
            android:text="@string/regisbtn_text"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18dp"
            android:padding="5dp"
            android:textColor="@color/palette_4" />
    </LinearLayout>
</layout>