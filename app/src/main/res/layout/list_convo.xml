<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="5dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/palette_3"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/convo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thomas"
            android:textSize="18dp"
            android:textColor="@color/palette_1"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Aksara        : "
                android:textColor="@color/palette_1"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/convo_aksara"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:justificationMode="inter_word"
                android:text="꧋ꦱꦺꦭꦩꦠ꧀ꦥꦒꦶ"
                android:textColor="@color/palette_1"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Jawa          : "
                android:textColor="@color/palette_1"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/convo_latin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Halo Budi"
                android:textColor="@color/palette_1"
                android:textSize="18dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="English       : "
            android:textColor="@color/palette_1"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/convo_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello Budi"
            android:textSize="18dp"
            android:textColor="@color/palette_1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Indonesian : "
            android:textColor="@color/palette_1"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/convo_indo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halo Budi"
            android:textSize="18dp"
            android:textColor="@color/palette_1"/>
    </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>