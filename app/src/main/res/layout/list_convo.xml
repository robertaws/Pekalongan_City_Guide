<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="20dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="5dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/palette_3"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/convo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thomas"
            android:textSize="18dp"
            android:textColor="@color/palette_1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/convo_aksara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="꧋ꦲꦭꦺꦴꦧꦸꦢꦶ"
            android:textSize="18dp"
            android:textColor="@color/palette_1"/>

        <TextView
            android:id="@+id/convo_latin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halo Budi"
            android:textSize="18dp"
            android:textColor="@color/palette_1"/>

        <TextView
            android:id="@+id/convo_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello Budi"
            android:textSize="18dp"
            android:textColor="@color/palette_1"/>

        <TextView
            android:id="@+id/convo_indo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halo Budi"
            android:textSize="18dp"
            android:textColor="@color/palette_1"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>