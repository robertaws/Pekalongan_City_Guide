<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/batik">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Layout.ItineraryList">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/backtoprofile"
                android:layout_gravity="center_vertical"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#0000"
                android:src="@drawable/back_icon"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Itinerary List"
                android:textSize="20dp"
                android:textColor="@color/palette_1" />
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/itinerary_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5BB91"
            app:tabBackground="@drawable/tab_selector"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"
            app:tabUnboundedRipple="false"
            app:tabTextColor="@color/palette_2"
            app:tabSelectedTextColor="@color/palette_4"
            app:tabIndicatorFullWidth="false" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/itinerary_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_itinerary"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </LinearLayout>
</layout>