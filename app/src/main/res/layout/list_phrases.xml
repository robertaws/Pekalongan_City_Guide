<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/palette_3"
    app:cardElevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/phrase_img"
            android:src="@drawable/logo"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <LinearLayout
            android:layout_toRightOf="@+id/phrase_img"
            android:layout_toEndOf="@+id/phrase_img"
            android:id="@+id/phrase_aksara"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Aksara    : "
                android:textColor="@color/palette_1"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/phrase_aksara_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:text="꧋ꦱꦺꦭꦩꦠ꧀ꦥꦒꦶ"
                android:textColor="@color/palette_1"
                android:textSize="18dp" />

        </LinearLayout>

    <TextView
        android:textColor="@color/palette_1"
        android:maxLines="2"
        android:id="@+id/phrase_latin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phrase_aksara"
        android:layout_alignStart="@id/phrase_aksara"
        android:layout_alignLeft="@id/phrase_aksara"
        android:justificationMode="inter_word"
        android:text="Sugeng enjing"
        android:textSize="16dp"/>

    <TextView
        android:textColor="@color/palette_1"
        android:id="@+id/phrase_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phrase_latin"
        android:layout_alignStart="@id/phrase_latin"
        android:layout_alignLeft="@id/phrase_latin"
        android:justificationMode="inter_word"
        android:text="Good Morning"
        android:textSize="16dp"/>

    <TextView
        android:textColor="@color/palette_1"
        android:maxLines="2"
        android:id="@+id/phrase_indo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phrase_english"
        android:layout_alignStart="@id/phrase_english"
        android:layout_alignLeft="@id/phrase_english"
        android:justificationMode="inter_word"
        android:text="Selamat pagi"
        android:textSize="16dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
