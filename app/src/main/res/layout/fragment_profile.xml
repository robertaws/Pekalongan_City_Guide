<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Layout.ProfileFragment">

    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8F7F4"
            android:orientation="vertical">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="50dp"
                android:backgroundTint="@color/palette_1"
                android:backgroundTintMode="screen"
                android:background="@drawable/batik"/>

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="-150dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/palette_4"
                    app:shapeAppearance="@style/roundedImage" />
            </FrameLayout>

            <TextView
                android:id="@+id/user_header"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableTint="#ACA2A2"
                android:fontFamily="@font/poppins_regular"
                android:drawableLeft="@drawable/user_icon"
                android:textColor="#ACA2A2"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_txt"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/profile_user"
                    android:layout_marginTop="10dp"
                    android:textColor="#55545A"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/edit_name"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit_icon"
                    android:background="#0000"/>
            </RelativeLayout>


            <com.google.android.material.divider.MaterialDivider
                app:dividerColor="@color/palette_4"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableTint="#ACA2A2"
                android:fontFamily="@font/poppins_regular"
                android:drawableLeft="@drawable/mail_icon"
                android:layout_marginTop="10dp"
                android:textColor="#ACA2A2"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_txt"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_marginTop="10dp"
                android:textColor="#55545A"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="18dp"
                android:textStyle="bold" />

            <com.google.android.material.divider.MaterialDivider
                app:dividerColor="@color/palette_4"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableTint="#ACA2A2"
                android:fontFamily="@font/poppins_regular"
                android:drawableLeft="@drawable/date_icon"
                android:layout_marginTop="10dp"
                android:textColor="#ACA2A2"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_txt"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_joined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="-"
                android:textColor="#55545A"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <com.google.android.material.divider.MaterialDivider
                app:dividerColor="@color/palette_4"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <GridLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:useDefaultMargins="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_columnWeight="1">
                    <ImageButton
                        android:id="@+id/showItinerary_btn"
                        android:background="#0000"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/route"
                        app:tint="@color/palette_1"/>
                    <TextView
                        android:id="@+id/iter_text"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textStyle="italic"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/palette_2"
                        android:text="@string/itinerary_profile"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_columnWeight="1">
                    <ImageButton
                        android:id="@+id/edit_lang"
                        android:background="#0000"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/language_icon"
                        app:tint="@color/palette_1"/>
                    <TextView
                        android:id="@+id/changLang_text"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textStyle="italic"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/palette_2"
                        android:text="@string/change_lang"/>
                    <TextView
                        android:id="@+id/lang_text"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textStyle="italic"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#ACA2A2"
                        android:text="English"/>
                </LinearLayout>
            </GridLayout>

            <Button
                android:padding="10dp"
                android:id="@+id/change_pass"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@color/palette_4"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppins_semibold"
                android:layout_height="wrap_content"
                android:text="@string/change_password"/>
            <Button
                android:padding="10dp"
                android:id="@+id/logout_btn"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:textColor="@color/palette_4"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout_text" />
        </LinearLayout>
    </ScrollView>

</layout>