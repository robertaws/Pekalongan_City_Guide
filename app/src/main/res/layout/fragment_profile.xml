<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Layout.ProfileFragment">

    <data>

    </data>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="50dp"
                android:backgroundTint="@color/palette_1"
                android:backgroundTintMode="screen"
                android:background="@drawable/batik"/>

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="-150dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/palette_4"
                    app:shapeAppearance="@style/roundedImage" />
            </FrameLayout>


            <TextView
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableTint="#ACA2A2"
                android:drawableLeft="@drawable/user_icon"
                android:textColor="#ACA2A2"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_txt"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/profile_user"
                    android:layout_marginTop="10dp"
                    android:textColor="#55545A"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Cena"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/edit_name"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit_icon"
                    android:background="#0000"/>
            </RelativeLayout>


            <com.google.android.material.divider.MaterialDivider
                app:dividerColor="@color/palette_4"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableTint="#ACA2A2"
                android:drawableLeft="@drawable/mail_icon"
                android:layout_marginTop="10dp"
                android:textColor="#ACA2A2"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_txt"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_marginTop="10dp"
                android:textColor="#55545A"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="john_cena@wwe.com"
                android:textSize="18dp"
                android:textStyle="bold" />

            <com.google.android.material.divider.MaterialDivider
                app:dividerColor="@color/palette_4"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableTint="#ACA2A2"
                android:drawableLeft="@drawable/date_icon"
                android:layout_marginTop="10dp"
                android:textColor="#ACA2A2"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_txt"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_joined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="5-1-1999"
                android:textColor="#55545A"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <com.google.android.material.divider.MaterialDivider
                app:dividerColor="@color/palette_4"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableTint="#ACA2A2"
                android:drawableLeft="@drawable/type_icon"
                android:layout_marginTop="10dp"
                android:textColor="#ACA2A2"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type_txt"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Admin"
                android:textColor="#55545A"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <com.google.android.material.divider.MaterialDivider
                app:dividerColor="@color/palette_4"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:padding="10dp"
                android:id="@+id/change_pass"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:textColor="@color/palette_4"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password" />
            <Button
                android:padding="10dp"
                android:id="@+id/logout_btn"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:textColor="@color/palette_4"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout_text" />
        </LinearLayout>
</layout>