<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addDesti">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_batik"
            android:backgroundTint="@color/palette_4"
            android:backgroundTintMode="screen"
            android:orientation="vertical"
            tools:context=".Layout.AddDestination">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/backtoAdmin"
                    android:contentDescription="Back to Admin Home"
                    android:layout_gravity="start"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="#0000"
                    android:src="@drawable/back_icon" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/add_picture"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/insert_photo"
                android:layout_marginHorizontal="40dp" />

            <EditText
                android:id="@+id/title_et"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:background="@drawable/et_style"
                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppins_regular"
                android:layout_height="wrap_content"
                android:hint="@string/add_new_destination" />

            <EditText
                android:id="@+id/desc_et"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:background="@drawable/et_style"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/destination_description" />

            <TextView
                android:id="@+id/category_pick"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:hint="Pick Category"
                android:drawableStart="@drawable/category"
                android:padding="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginHorizontal="30dp"
                android:drawableEnd="@drawable/dropdown_icon"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center" />

            <Button
                android:id="@+id/add_btn"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_width="match_parent"
                android:textColor="@color/palette_4"
                android:layout_height="wrap_content"
                android:text="@string/add_item"
                android:layout_marginHorizontal="30dp" />

        </LinearLayout>

    </ScrollView>

</layout>