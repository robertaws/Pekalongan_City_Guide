<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tran"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout.ConversationFragment"
    android:background="@color/bg">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/convo_header"
                android:textSize="24dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:textColor="@color/palette_1"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/convo_rv"
                tools:listitem="@layout/list_convo"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phrases_header"
                android:textSize="24dp"
                android:fontFamily="@font/poppins_semibold"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/palette_1"
                android:nestedScrollingEnabled="false" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phrases_rv"
                android:layout_marginBottom="20dp"
                tools:listitem="@layout/list_phrases"
                android:layout_weight="1" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
