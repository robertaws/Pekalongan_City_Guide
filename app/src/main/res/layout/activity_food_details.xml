<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/palette_4"
    tools:context=".Layout.FoodDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/backHome"
                android:layout_gravity="start"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#0000"
                android:src="@drawable/back_icon" />

            <TextView
                android:layout_marginStart="-20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Culinary"
                android:textColor="@color/palette_1"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/cul_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/palette_3"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp"
            app:contentPaddingBottom="10dp"
            app:contentPaddingLeft="20dp"
            app:contentPaddingRight="20dp"
            app:contentPaddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textSize="20dp"
                    android:id="@+id/cul_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Culinary Name"
                    android:textColor="@color/palette_1"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/cul_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:text="Culinary Description"
                    android:textColor="@color/palette_1" />
                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Culinary Gallery"
                    android:textColor="@color/palette_1"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="16dp"
                    android:layout_marginTop="8dp"
                    app:cardElevation="5dp">
                    <ImageView
                        android:id="@+id/cul_img1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                         />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp">
                    <ImageView
                        android:id="@+id/cul_img2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                         />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp">
                    <ImageView
                        android:id="@+id/cul_img3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                         />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>