<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/palette_4"
        tools:context=".Layout.DestinationDetails">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backDesti"
                android:layout_gravity="start"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#0000"
                android:src="@drawable/back_icon"/>

            <TextView
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:text="@string/detail_header"
                android:textColor="@color/palette_1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/addItenary"
                android:layout_gravity="end"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#0000"
                android:src="@drawable/plus" />
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/desti_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/palette_3"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="5dp"
                    app:contentPaddingBottom="10dp"
                    app:contentPaddingLeft="20dp"
                    app:contentPaddingRight="20dp"
                    app:contentPaddingTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:textSize="20dp"
                            android:id="@+id/desti_name"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Destination Name"
                            android:textColor="@color/palette_1"
                            android:textStyle="bold" />

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/desti_desc"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:justificationMode="inter_word"
                            android:text="Destination Description"
                            android:textColor="@color/palette_1" />

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/desti_address"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:justificationMode="inter_word"
                            android:text="Destination Address"
                            android:textColor="@color/palette_1"/>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/desti_phone"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:justificationMode="inter_word"
                            android:text="Destination Phone"
                            android:textColor="@color/palette_1" />

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <fragment
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"/>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:drawableLeft="@drawable/baseline_access_time_24"
                            android:drawablePadding="5dp"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:justificationMode="inter_word"
                            android:text="@string/opening_hours_detail"
                            android:textColor="@color/palette_1" />
                                <androidx.recyclerview.widget.RecyclerView
                                    android:padding="15dp"
                                    android:background="@color/ic_launcher_background"
                                    android:id="@+id/opening_rv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginBottom="15dp"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    tools:listitem="@layout/list_opening_hours"/>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:drawableLeft="@drawable/review_icon"
                            android:drawableTint="@color/palette_1"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:justificationMode="inter_word"
                            android:text="@string/place_reviews_detail"
                            android:textColor="@color/palette_1" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/review_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/list_review"/>
                        <com.google.android.material.divider.MaterialDivider
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:drawableLeft="@drawable/comment_icon"
                                android:drawableTint="@color/palette_1"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:justificationMode="inter_word"
                                android:text="@string/comment_text"
                                android:textColor="@color/palette_1"/>
                            <ImageButton
                                android:id="@+id/add_comment_btn"
                                android:padding="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_alignParentRight="true"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/add_comment"
                                android:background="#0000"
                                app:tint="@color/palette_4"/>
                        </RelativeLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/comment_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:listitem="@layout/list_comment"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:nestedScrollingEnabled="false"/>
                        <com.google.android.material.divider.MaterialDivider
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/save_item"
                            android:textAllCaps="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginTop="20dp"
                            android:drawableLeft="@drawable/remove_bookmark"
                            android:drawableTint="@color/palette_4"
                            android:text="Bookmark Place"
                            android:textAlignment="center"
                            android:textColor="@color/palette_4" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>