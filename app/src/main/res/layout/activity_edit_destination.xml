<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".EditDestination">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backDestiAdmin"
                android:layout_gravity="start"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#0000"
                android:src="@drawable/back_icon" />

            <TextView
                android:layout_marginStart="-20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Edit Destination"
                android:textColor="@color/palette_1"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edit_destiname"
                android:layout_marginVertical="20dp"
                android:padding="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:hint="Destination Name" />

            <EditText
                android:id="@+id/edit_destidesc"
                android:layout_marginVertical="10dp"
                android:padding="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:hint="Destination Description" />

            <TextView
                android:id="@+id/categoryTV"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:hint="Pick Category"
                android:drawableStart="@drawable/category"
                android:padding="10dp"
                android:layout_marginHorizontal="30dp"
                android:drawableEnd="@drawable/dropdown_icon"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center" />

            <Button
                android:layout_marginTop="30dp"
                android:id="@+id/update_desti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Update Destination"
                android:padding="15dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/palette_4" />
        </LinearLayout>

    </ScrollView>

    </LinearLayout>
</layout>