<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp">

        <RelativeLayout
            android:background="@color/ic_launcher_background"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/user_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user_icon"
                app:strokeColor="@color/palette_2"
                app:strokeWidth="1dp"
                app:shapeAppearanceOverlay="@style/circleImage" />

            <TextView
                android:id="@+id/user_name"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/user_profile"
                android:fontFamily="@font/poppins_semibold"
                android:text="Name"
                android:textSize="16dp"
                android:textColor="@color/palette_1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comment_date"
                android:layout_margin="5dp"
                android:fontFamily="@font/poppins_regular"
                android:drawablePadding="5dp"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/comment_date"
                android:textColor="#ACA2A2"
                android:text="dd/mm/yyyy" />

            <TextView
                android:id="@+id/user_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name"
                android:layout_marginStart="15dp"
                android:textSize="12dp"
                android:layout_toEndOf="@id/user_profile"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_vertical"
                android:text="Comment"
                android:textColor="@color/palette_2" />
            <ImageButton
                android:id="@+id/edit_comment_btn"
                android:layout_width="30dp"
                android:layout_marginEnd="5dp"
                android:layout_height="30dp"
                android:src="@drawable/edit_icon"
                android:visibility="invisible"
                android:background="#0000"
                android:layout_below="@id/comment_date"
                android:layout_toLeftOf="@id/delete_comment_btn"/>
            <ImageButton
                android:id="@+id/delete_comment_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/delete"
                android:visibility="invisible"
                android:background="#0000"
                android:layout_below="@id/comment_date"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
