<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_batik"
    android:backgroundTint="@color/palette_4"
    android:backgroundTintMode="screen"
    tools:context=".Layout.CityHistory">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/backHome2"
            android:layout_gravity="start"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#0000"
            android:src="@drawable/back_icon" />
        <TextView
            android:includeFontPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/history_header"
            android:textColor="@color/palette_1"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:justificationMode="inter_word"
        android:text="@string/history_body"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/palette_2"
        android:textSize="18dp"/>
    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/palette_3"
            android:orientation="vertical">
            <TextView
                android:includeFontPadding="false"
                android:drawablePadding="5dp"
                android:layout_marginVertical="10dp"
                android:drawableRight="@drawable/info_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_info"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/palette_1"
                android:textSize="24dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/palette_1"
                android:text="Pekalongan Other transcription(s) :\n - Hanacaraka :	ꦥꦼꦏꦭꦺꦴꦁꦔꦤ꧀\n - Pegon :	ڤٓكالَوڠان\n - Chinese	: 北加隆岸\n\nNickname : Kota Batik (lit. 'the Batik city')\n\nMotto(s) : Pekalongan Kota BATIK (Bersih (Clean), Aman (Safe), Tertib (Discipline), Indah (Beautiful), Komunikatif (Communicative))\n\nMayor :	Saelany Mahfudz\n\nArea Total :	45.25 km2 (17.47 sq mi)\n\nTotal Population per-2019 :	307,097\nDensity : 6,800/km2 (18,000/sq mi)\n\nTime zone : UTC+7 (Western Indonesia Time)\n\nArea code : (+62) 285\n\nWebsite : pekalongankota.go.id"
                android:textSize="16dp"/>
            <com.google.android.material.divider.MaterialDivider
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.google.android.material.divider.MaterialDivider>
            <TextView
                android:drawablePadding="10dp"
                android:includeFontPadding="false"
                android:drawableRight="@drawable/contact_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/important_numbers"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/palette_1"
                android:textSize="24dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppins_regular"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/palette_1"
                android:textSize="16dp"
                android:text="@string/numbers"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="170dp"
                        android:layout_height="140dp"
                        android:background="@drawable/history1"
                        android:backgroundTint="@color/palette_4"
                        android:backgroundTintMode="multiply"/>
                    <TextView
                        android:textColor="@color/palette_1"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coat_arms_old"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:background="@color/white"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:background="@drawable/history2"
                        android:backgroundTint="@color/palette_4"
                        android:backgroundTintMode="multiply"/>
                    <TextView
                        android:layout_marginTop="3dp"
                        android:textColor="@color/palette_1"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coat_arms_new"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="220dp"
                        android:layout_height="150dp"
                        android:background="@drawable/history3"
                        android:backgroundTint="@color/palette_4"
                        android:backgroundTintMode="multiply"/>
                    <TextView
                        android:layout_marginTop="3dp"
                        android:textColor="@color/palette_1"
                        android:textSize="16dp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/city_flag"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>

</ScrollView>