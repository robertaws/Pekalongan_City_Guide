<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="circleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="CustomHelperText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">#ED2A15</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/palette_1</item>
    </style>

    <style name="CustomAutoCompleteTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/palette_1</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/palette_4</item>
        <item name="android:colorBackground">@color/palette_4</item>
        <item name="android:colorPrimary">@color/palette_4</item>
        <item name="android:colorAccent">@color/palette_4</item>
        <item name="android:textColorPrimary">@color/palette_1</item>
        <item name="android:textColorSecondary">@color/palette_1</item>
    </style>
</resources>